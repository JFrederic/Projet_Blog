{% trans_default_domain 'FOSUserBundle' %}


<div class="container">
    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
    <div class="row">
        <div class="col s8 offset-s2">

            {{ form_row(form.username) }} {{ form_row(form.email) }} {{ form_row(form.nom) }} {{ form_row(form.prenom) }} {{ form_row(form.telephone) }} {{ form_widget(form.imageFile) }}




        </div>
    </div>
    <div class="row">
        <div class="col s8 offset-s2">

            {{ form_row(form.current_password) }}
        </div>
    </div>

    <div class="row center-align">
        <input class="waves-effect waves-light btn deep-purple lighten-1" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
        <a href="/profile" class="waves-effect waves-light btn red lighten-1">Retour</a>

    </div>
    {{ form_end(form) }}
</div>