{% extends 'base.html.twig' %} {% block body %}

<div class="container">
    <div class="row">
        <div class="col s10 offset-s1">
            <h2 class="deep-purple-text lighten-1">Créer un article</h2> {{ form_start(form) }}
            <div class="row">
                <div class="input-field col s12">
                    {{ form_label(form.titre) }} {{ form_widget(form.titre) }}
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    {{ form_label(form.description, 'Contenu') }} {{ form_widget(form.description) }}
                </div>
            </div>
            <div class="row">
                <div class="file-field input-field col s6">
                    <div class="btn-floating btn-flat waves-effect waves-light tooltipped green" type="submit" data-position="left" data-delay="50" data-tooltip="Ajouter une image">
                        <i class="fa fa-file-image-o"></i> {{ form_widget(form.imageFile) }}
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    {{ form_widget(form.save, {'label':'Publier' , 'attr': {'class':'waves-effect waves-light btn-flat blue lighten-1'}}) }} {{ form_widget(form.brouillon, {'label':'Enregistrer comme brouillon' , 'attr': {'class':'waves-effect waves-light btn-flat red lighten-1'}}) }}
                </div>
            </div>
            {{ form_end(form) }}

            <ul>
                <li>
                    <a href="{{ path('article_index') }}">Retour à la liste</a>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}