            <link rel="stylesheet" href="{{ asset('framework/style.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    </head>


    <body>

        <nav class="navbar navbar-inverse  ">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Lebonzafaire</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active">
                            <a href="#">Home</a>
                        </li>
                        <li>
                            <a href="/">ACCEUIL</a>
                        </li>
                        <li>
                            <a href="/contact">ARTICLE</a>
                        </li>
                        {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <li>
                                <a href="/login">CONNEXION</a>
                            </li>
                        {% else %}
                            {% if is_granted('ROLE_ADMIN') %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">ADMINISTRATION <span class="caret"></span></a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                        <li>
                                            <a href="/article">Mes articles</a>
                                        </li>
                                        <li>
                                            <a href="/profile">Profil</a>
                                        </li>
                                        <li>
                                            <a href="#">Commentaires</a>
                                        </li>
                                        <li>
                                            <a href="/logout">Deconnexion</a>
                                        </li>
                                    </ul>
                                </div>
                            {% else %}
                            <li>
                                <a href="/logout">DECONNEXION</a>
                            </li>

                        {% endif %}

                    {% endif %}

                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </nav>

  {% block body %}
    <div class="container">

        <div class="starter-template">

            <h1 class="text-center">Le BLOG Reunionnais des Zaffer !!</h1>
            <p class="lead">Nos derniers commentaires</p>

        </div>
    </div>
    <!-- /.container -->


    {% endblock %}


    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    {% endblock %}
</body>

</html>
