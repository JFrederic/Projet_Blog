{% extends 'base.html.twig' %}
{% block body %}


<div class="container">
     <div class="row">
       {% for article in articles %}
         <div class="col s10 offset-s1">
         <div class="card">
           <div class="card-image">
             <img class="responsive-img" src="/images/products/{{ article.imageName }}" style="width:100%;" alt=""/>
             <span class="card-title deep-purple lighten-1">{{ article.titre }}</span>
           </div>
            <div class="card-action right-align">
                <a  href="/{{article.id}}/like/article" class="secondary-content aime"><i  id="like" class="fa fa-heart fa-2x"></i> {{article.allLikes}} <span> {% if article.allLikes|length > 0  %}  j'aime {% else %} 0 j'aime {% endif %} </span> </a>
            </div>
           <div class="card-content">
             <p>{{ article.description|raw|nl2br }}</p>
           </div>
           <div class="card-action right-align">
             <span>{% if article.dateCreation %}Posté le {{ article.dateCreation|date('d-m-Y') }} à {{ article.dateCreation|date('h:m') }}{% endif %}</span>
           </div>

           <div class="card-action right-align">
            

           </div>

         </div>
       </div>


       {% endfor %}
     </div>



{% endblock %}
