{% extends 'base.html.twig' %}


{% block body %}
<h1>Article</h1>

<table>
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ article.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ article.titre }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ article.description }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="/images/products/{{article.imageName}}" alt="" /></td>
        </tr>

        <tr>
            <th>Datecreation</th>
            <td>{% if article.dateCreation %}{{ article.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Brouillon</th>
            <td>{% if article.brouillon %}Yes{% else %}No{% endif %}</td>
        </tr>
    </tbody>
</table>

<h5>Poster un commentaire :</h5>



